<div class="container">
  <h1>Following Users</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @user.following_user.where.not(id: current_user.id).each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
          <td><%= user.name %></td>
          <td>フォロー数：<%= user.following_user.count %></td>
          <td>フォロワー数：<%= user.follower_user.count %></td>
          <td><%= link_to "Show", user_path(user), class: "text-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
