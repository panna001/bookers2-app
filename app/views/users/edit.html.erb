<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user, local: true do |f| %>
      <%= render "layouts/error_message", model: f.object %>

        <div class="form-group mb-3">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "d-block form-control" %>
        </div>
        <div class="form-group mb-3">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "d-block" %>
        </div>
        <div class="form-group mb-3">
          <label for="inputBody">Introduction</label>
          <%= f.text_area :profile, placeholder: "コメント",class: "d-block form-control" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary"  %>
      <% end %>
    </div>
  </div>
</div>
