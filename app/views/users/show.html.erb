<%= render "layouts/error_message", model:@book %>
<%= render "layouts/user_info", user:@user %>
<%= render "layouts/new_book", book:@book %>


<h1>Book detail</h1>
<% @books.each do |book| %>
  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"  %>
  <%= book.user.name %>
  <%= book.title %>
  <%= book.body %>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(book) %>
    <%= link_to "Destroy", book_path(book), method: :delete %>
  <% end %>
<% end %>