<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpg", fallback: "no_image.jpg" %>
<p>name<%= @user.name %></p>
<p>introduction <%= @user.profile %></p>
<%= link_to "編集ページ（仮）", edit_user_path(@user) %>

<h1>New book</h1>
<!--↓変更必要-->
<%= form_with model: @book, url: books_path, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>


