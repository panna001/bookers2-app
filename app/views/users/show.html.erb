</div><%= render "layouts/error_message", model:@book %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/user_info", user:@user %>
      <%= render "layouts/new_book", book:@book %>
    </div>
    <div class="col-8 ml-auto">
      <h1>Books</h1>
      <table class="table table_striped">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"  %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(book), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
