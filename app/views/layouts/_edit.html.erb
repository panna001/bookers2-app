<%= form_with model: model, local: true do |f| %>
<%= render "layouts/error_message", model: f.object %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputBody">Introduction</label>
  <%= f.text_area :profile, placeholder: "コメント" %>
  <%= f.submit "Update User" %>
<% end %>