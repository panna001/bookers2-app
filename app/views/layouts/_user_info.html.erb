<div class="container mx-1">
    <h1>User info</h1>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpg", fallback: "no_image.jpg" %>
    <table class="table table_striped">
        <tr>
            <th>name</th>
            <td><%= user.name %></td>
        </tr>
        <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
        </tr>
        <tr>
            <th>follows</th>
            <td><%= link_to user.following_user.count, user_following_path(user) %></td>
        </tr>
        <tr>
            <th>followers</th>
            <td><%= link_to user.follower_user.count, user_follower_path(user) %></td>
        </tr>
    </table>
</div>

<%= link_to edit_user_path(user), class: "btn btn-block btn-sm btn-outline-secondary mb-3" do %>
    <i class="fas fa-user-cog"></i>
<% end %>
