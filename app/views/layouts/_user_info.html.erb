<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpg", fallback: "no_image.jpg" %>
<table>
    <tr>
        <th>name</th>
        <td><%= user.name %></td>
    </tr>
    <tr>
        <th>introduction</th>
        <td><%= user.profile %></td>
    </tr>
</table>

<%= link_to edit_user_path(user) do %>
    <i class="fas fa-user-cog"></i>
<% end %>

