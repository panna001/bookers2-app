<tbody>
  <% book_detail.book_comments.each do |book_comment| %>
    <tr>              
      <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
          <p><%= book_comment.user.name %></p>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comment_path(id: book_comment.id, book_id: book_comment.book.id), class: "btn btn-sm btn-danger", method: :delete, remote: true %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
