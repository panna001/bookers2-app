<% if book.favorited_by?(current_user) %>
  ︎<%= link_to "♥#{book.favorites.count}", book_favorites_path(book), class: "text-danger", method: :delete, remote: true %>
<% else %>
  <%= link_to "♥#{book.favorites.count}", book_favorites_path(book), class: "text-blue", method: :post, remote: true %>
<% end %>