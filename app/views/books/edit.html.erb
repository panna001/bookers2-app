<div class="container">
  <div class"row">
    <div class="col-md-5 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local: true do |f| %>
        <%= render "layouts/error_message", model: f.object %>

        <div class="form-group mb-3">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: "タイトル", class: "d-block form-control" %>
        </div>
        <div class="form-group mb-3">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, id: "inputBody", placeholder: "説明", class: "d-block form-control" %>
        </div>
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>
      <% if @book.user == current_user %>
        <%= link_to "Show", book_path(@book) %><span> | </span><%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>